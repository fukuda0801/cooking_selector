<div class="header_main ">
  <nav class="navbar navbar-expand-lg navbar-light  justify-content-between py-3 py-lg-0 px-0 px-lg-5">
    <%= link_to image_tag('home.png', class: "home_logo_img"), root_path %>
    <div class="header_btn_group" id="navbarCollapse">
      <% if user_signed_in? %>
        <div class="dropdown">
          <button class="btn btn-primary dropdown-toggle dropdown_login_btn" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
            <%= current_user.name %>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <%= link_to "アカウント情報", user_path(current_user.id), class: "dropdown-item dropdown_item_link" %>
            <%= link_to "お気に入り料理", favorites_user_path(current_user.id), class: "dropdown-item dropdown_item_link" %>
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "dropdown-item dropdown_item_link" %>
            <% if current_user.name == "ゲストユーザー" %>
              <a href="" class="dropdown-item dropdown_item_link dropdown_item_disabled" tabindex="-1" aria-disabled="true">退会する</a>
            <% else %>
              <%= link_to "退会する", user_path(current_user.id), method: :delete, class: "dropdown-item dropdown_item_link", data: { confirm: "本当に削除しますか？" } %>
            <% end %>
          </ul>
        </div>
      <% else %>
        <%= link_to "新規登録", new_user_registration_path, class: "login_btn" %>
        <%= link_to "ログイン", new_user_session_path, class: "login_btn" %>
        <%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post, class: "login_btn" %>
      <% end %>
    </div>
  </nav>
</div>
