<div class="user_comment_all">
  <div class="user_comment_page">
    <div class="user_comment_content">
      <h4 class="user_comment_title"><%= @user.name %>様のコメント一覧</h4>

      <div class="user_comment_main">
        <% if @comments.present? %>
          <% @comments.each do |comment| %>
            <div class="user_comment_dish">
              <p>料理名：<%= comment.dish.name %></p>
              <p>投稿日：<%= comment.created_at.to_s(:custom_date) %></p>
              <p>コメント：<%= comment.content %></p>
              <%= link_to '削除', dish_comment_path(comment.dish, comment), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'comment_delete_btn' %>
            </div>
          <% end %>
        <% else %>
          <p>コメントはまだしていません。</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
